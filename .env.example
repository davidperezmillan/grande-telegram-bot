# Credenciales de API de Telegram
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token
USER_ID=your_user_id

# Configuración del grupo objetivo
TARGET_GROUP_ID=-1001234567890
TARGET_GROUP_USERNAME=your_group_username

# Configuración de archivos
MAX_FILE_SIZE_MB=20
DOWNLOAD_DIR=/app/downloads

# Configuración de Procesamiento Avanzado de Videos
# Habilitar procesamiento avanzado con recorte automático de clips
ENABLE_ADVANCED_VIDEO_PROCESSING=false

# Configuración de Clips de Video (si el procesamiento avanzado está habilitado)
VIDEO_CLIP_DURATION=30        # Duración del clip en segundos
VIDEO_CLIP_START_OFFSET=10    # Comenzar el clip después de X segundos

# Configuración de base de datos
DATABASE_URL=sqlite:///data/bot_data.db

# Configuración de logs
LOG_LEVEL=INFO